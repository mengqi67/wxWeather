.container {
  position: fixed;
  display: flex;
  width:100%;
  flex-direction: column;
  z-index: 999;
} 
.scroll-box{
  position: absolute;
  top:0px;
  width:100%;
  height: 100vh;
  padding-top:100rpx;
  box-sizing: border-box;
}
.cityname {
  color: white;
  width: 100%;
  margin: 16px auto;
  text-align: center;
}
.cityname .add {
  float: left;
  margin-left: 10px;
  height: 30px;
  width: 30px;
}
.cityname .menu {
  margin-right: 10px;
  float: right;
  width: 30px;
  height: 30px;
}
 .bigtemp{
   margin: 20px auto;
  width: 100%;
  height: 80px;
   text-align: center;
}
.bigtemp image {
  width: 80px;
  height: 80px;
  vertical-align: top;
} 
 .bigtemp text {
  font-size: 70px;
  font-weight: 800;
  color: white;
}  
.weatherText {
  color: white;
  text-align: center;
  margin-bottom: 5px;
} 
.today {
   color: white;
  text-align: center;
  margin: 5px auto;
}
.msg {
  margin: 10px auto;
  width: 100%;
  font-size: 15px;
}
.pm {
  display: inline-block;
  width: 33.33%;
  text-align: center;
  border-right: 1px solid #000;
}
.temp{
  display: inline-block;
  width: 33.33%;
  text-align: center;
  border-right: 1px solid #000;
}
.wind {
  display: inline-block;
  width: 30.33%;
  text-align: center;
}
.pm image {
  display: block;
  margin: 5px auto;
  height: 40px;
  width: 40px;
}
.temp image {
  display: block;
    height: 40px;
  width: 40px;
  margin: 5px auto;
}
.wind image{
    display: block;
    height: 40px;
  width: 40px;
  margin: 5px auto;
}
.pm text{
  display: block;
  color: white;
}
.temp text{
    display: block;
  color: white;
}
.wind text{
    display: block;
  color: white;
}
.list{
  width: 100%;
}
.list view{
  height: 50px;
  background-color: rgba(0, 0, 0, 0.1);
  line-height: 50px;
  margin-bottom:1px; 
}
.list view text{
  color: white;
  margin-left: 10px;
}
.list view .num{
  float: right;
  margin-right: 10px;
}
.list view image{
  width: 30px;
  height: 30px;
  float: right;
  margin-right: 10px; 
  margin-top : 10px;
  opacity: 1;
}
 .quality view{
  background-color: rgba(0, 0, 0, 0.1);
  color: white;
    width: 100%;
  height: 50px;
} 
.title{
  line-height: 50px;
  padding: 10px;
}
.content text{
  margin-left: 10px;
  font-size: 17px;
}
.content image {
  height: 50px;
  width: 50px;
  float: right;
  margin-right: 20px;
}
.wall{
  position: fixed;
  height: 100vh;
  width: 100%;
  z-index: 9
}